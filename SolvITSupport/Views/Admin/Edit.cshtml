@model EditUserViewModel

@{
    ViewData["Title"] = "Editar Utilizador";
    Layout = "_DashboardLayout";
}

<h1>@ViewData["Title"]</h1>
<h4>@Model.NomeCompleto</h4>
<hr />

@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)


<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="NomeCompleto" class="form-label"></label>
                <input asp-for="NomeCompleto" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Cargo" class="form-label"></label>
                <input asp-for="Cargo" class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Departamento" class="form-label"></label>
                <input asp-for="Departamento" class="form-control" />
            </div>
        </div>
        <div class="col-md-6">
            <h5>Papéis (Roles)</h5>
            <div class="form-group">
                @for (int i = 0; i < Model.AllRoles.Count; i++)
                {
                    <div class="form-check">
                        <input type="checkbox" name="UserRoles" value="@Model.AllRoles[i].Value"
                               class="form-check-input" @(Model.UserRoles.Contains(Model.AllRoles[i].Value) ? "checked" : "") />
                        <label class="form-check-label">@Model.AllRoles[i].Text</label>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="mt-3">
        <input type="submit" value="Salvar" class="btn btn-primary" />

        <button type="submit"
                class="btn btn-warning"
                formaction="@Url.Action("ResetPassword", "Admin", new { id = Model.Id })"
                onclick="return confirm('Tem certeza que deseja resetar a senha deste usuário para a senha padrão?');">
            Resetar Senha
        </button>
        <a asp-action="Users" class="btn btn-secondary">Cancelar</a>
    </div>
</form>