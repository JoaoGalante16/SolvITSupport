@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Gerir Utilizadores";
    Layout = "_DashboardLayout";
}

<div class="page-header-title">
    <h1>Utlizadores</h1>
</div>

<p>
    <a asp-controller="Admin" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-person-plus-fill me-2"></i> Criar Novo Utilizador
    </a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome Completo</th>
            <th>Email</th>
            <th>Cargo</th>
            <th>Departamento</th>
            <th>Ativo</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.NomeCompleto</td>
                <td>@user.Email</td>
                <td>@user.Cargo</td>
                <td>@user.Departamento</td>
                <td>@(user.Ativo ? "Sim" : "Não")</td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@user.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@user.Id">Apagar</a>
                </td>
            </tr>
        }
    </tbody>
</table>