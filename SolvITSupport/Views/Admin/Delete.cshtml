@model ApplicationUser

@{
    ViewData["Title"] = "Apagar Utilizador";
    Layout = "_DashboardLayout";
}

<h1>@ViewData["Title"]</h1>

<h3 class="text-danger">Tem a certeza de que deseja apagar permanentemente este utilizador?</h3>
<p class="text-danger">Esta ação não pode ser revertida.</p>
<hr />

<div>
    <h4>Utilizador: @Model.NomeCompleto (@Model.Email)</h4>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim, apagar" class="btn btn-danger" />
        <a asp-action="Users" class="btn btn-secondary">Não, cancelar</a>
    </form>
</div>