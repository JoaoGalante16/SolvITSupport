@model SolvITSupport.Models.TicketDetailsViewModel

@{
    ViewData["Title"] = "Detalhes do Chamado";
}

<h1>@Model.Ticket.Titulo</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <h4>Detalhes</h4>
        <dl>
            <dt>Código</dt>
            <dd>@Model.Ticket.Codigo</dd>

            <dt>Status</dt>
            <dd>@Model.Ticket.Status?.Nome</dd>

            <dt>Prioridade</dt>
            <dd>@Model.Ticket.Prioridade?.Nome</dd>

            <dt>Categoria</dt>
            <dd>@Model.Ticket.Categoria?.Nome</dd>

            <dt>Solicitante</dt>
            <dd>@Model.Ticket.Solicitante?.NomeCompleto</dd>

            <dt>Atendente</dt>
            <dd>@(Model.Ticket.Atendente?.NomeCompleto ?? "Não atribuído")</dd>
        </dl>
        <a asp-action="Index" class="btn btn-secondary mt-3">Voltar para a Lista</a>
    </div>

    <div class="col-md-8">
        <h4>Histórico de Atualizações</h4>
        <div class="mt-3" style="max-height: 400px; overflow-y: auto; border: 1px solid #ccc; padding: 1rem;">
            @foreach (var update in Model.Updates)
            {
                <div class="card mb-2">
                    <div class="card-header bg-light">
                        <strong>@update.Usuario?.NomeCompleto</strong> <span class="text-muted">em @update.DataCriacao.ToString("dd/MM/yyyy HH:mm")</span>
                    </div>
                    <div class="card-body">
                        <p class="card-text">@update.Conteudo</p>
                    </div>
                </div>
            }
        </div>

        @if (Model.Ticket.Anexos.Any())
        {
            <hr />
            <h4>Anexos</h4>
            <ul class="list-group">
                @foreach (var anexo in Model.Ticket.Anexos)
                {
                    <li class="list-group-item">
                        <a href="@anexo.Caminho" target="_blank">@anexo.NomeOriginal</a>
                        <span class="text-muted">(@(anexo.TamanhoBytes / 1024) KB)</span>
                    </li>
                }
            </ul>
        }

        <hr />

        <h4>Adicionar Novo Comentário</h4>
        <form asp-action="AddComment" asp-route-ticketId="@Model.Ticket.Id">
            <div class="form-group">
                <textarea asp-for="NewComment" class="form-control" rows="4"></textarea>
                <span asp-validation-for="NewComment" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Enviar Comentário</button>
        </form>
    </div>
</div>