@model SolvITSupport.Models.TicketDetailsViewModel
@using SolvITSupport.Services


@{
    ViewData["Title"] = "Detalhes do Chamado";
}


<div class="ticket-details-header">
    <h1>@Model.Ticket.Titulo</h1>
    <p class="text-muted">
        Chamado @Model.Ticket.Codigo &bull;
        Aberto em @Model.Ticket.DataCriacao.ToShortDateString() por @Model.Ticket.Solicitante?.NomeCompleto
    </p>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body content-card-body">
                <div class="content-card-section">
                    <h5>Descrição do Problema</h5>
                    <p class="ticket-description">@Model.Ticket.Descricao</p>
                </div>
                <hr />
                <div class="content-card-section">
                    <h5>Histórico de Atualizações</h5>
                    @foreach (var update in Model.Updates)
                    {
                        <div class="card mb-3">
                            <div class="card-header bg-light small">
                                <strong>@update.Usuario?.NomeCompleto</strong>
                                <span class="text-muted float-end">@update.DataCriacao.ToString("dd/MM/yyyy HH:mm")</span>
                            </div>
                            <div class="card-body">
                                <p class="card-text">@update.Conteudo</p>
                            </div>
                        </div>
                    }
                </div>
                <hr />
                <div class="content-card-section">
                    <form asp-action="AddComment" asp-route-ticketId="@Model.Ticket.Id">
                        <h5>Adicionar Resposta</h5>
                        <div class="form-group">
                            <textarea asp-for="NewComment" class="form-control" rows="4" placeholder="Digite a sua resposta..."></textarea>
                            <span asp-validation-for="NewComment" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">
                            <i class="fas fa-paper-plane me-2"></i> Enviar Resposta
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="details-card">
            <div class="card-header">Detalhes do Chamado</div>
            <div class="card-body">
                <dl class="row mb-0 small">
                    <dt class="col-5 fw-normal text-muted">Status</dt>
                    <dd class="col-7 fw-semibold">@Model.Ticket.Status?.Nome</dd>

                    <dt class="col-5 fw-normal text-muted">Prioridade</dt>
                    <dd class="col-7 fw-semibold">@Model.Ticket.Prioridade?.Nome</dd>                                    

                    <dt class="col-5 fw-normal text-muted">Categoria</dt>
                    <dd class="col-7 fw-semibold">@Model.Ticket.Categoria?.Nome</dd>

                    <hr class="my-3" />

                    <dt class="col-5 fw-normal text-muted">Solicitante</dt>
                    <dd class="col-7 fw-semibold">@Model.Ticket.Solicitante?.NomeCompleto</dd>

                    <dt class="col-5 fw-normal text-muted">Atendente</dt>
                    <dd class="col-7 fw-semibold">@(Model.Ticket.Atendente?.NomeCompleto ?? "Não atribuído")</dd>
                </dl>
            </div>
        </div>
        @if (Model.Ticket.Anexos.Any())
        {
            <div class="details-card mt-4">
                <div class="card-header">Anexos</div>
                <ul class="list-group list-group-flush">
                    @foreach (var anexo in Model.Ticket.Anexos)
                    {
                        <li class="list-group-item">
                            <a href="@anexo.Caminho" target="_blank">@anexo.NomeOriginal</a>
                        </li>
                    }
                </ul>
            </div>
        }
        <div class="details-card mt-4">
            <div class="card-header">Ações</div>
            <div class="d-grid gap-2 col-6 mx-auto mb-4">

                <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#statusModal">
                    <i class="bi bi-gear"></i> Status: @Model.Ticket.Status.Nome
                </button>

                <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#priorityModal">
                    <i class="bi bi-exclamation-circle"></i> Prioridade: @Model.Ticket.Prioridade.Nome
                </button>

                <button type="button" class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#assigneeModal">
                    <i class="bi bi-person-fill"></i> Atendente: @(Model.Ticket.Atendente?.NomeCompleto ?? "Não Atribuído")
                </button>

            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="statusModal" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Tickets" asp-action="ChangeStatus" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="statusModalLabel">Alterar Status do Ticket TK-@Model.Ticket.Id</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="ticketId" value="@Model.Ticket.Id" />

                    <div class="mb-3">
                        <label for="newStatusId" class="form-label">Selecione o novo Status:</label>

                        <select name="newStatusId"
                                id="newStatusId"
                                class="form-select"
                                asp-items="@ViewBag.Statuses">
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar Status</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="priorityModal" tabindex="-1" aria-labelledby="priorityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Tickets" asp-action="ChangePriority" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="priorityModalLabel">Alterar Prioridade do Ticket TK-@Model.Ticket.Id</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="ticketId" value="@Model.Ticket.Id" />

                    <div class="mb-3">
                        <label for="newPriorityId" class="form-label">Selecione a nova Prioridade:</label>

                        <select name="newPriorityId"
                                id="newPriorityId"
                                class="form-select"
                                asp-items="@ViewBag.Priorities">
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Salvar Prioridade</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="assigneeModal" tabindex="-1" aria-labelledby="assigneeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Tickets" asp-action="ChangeAssignee" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="assigneeModalLabel">Atribuir Ticket TK-@Model.Ticket.Id</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="ticketId" value="@Model.Ticket.Id" />

                    <div class="mb-3">
                        <label for="newAssigneeId" class="form-label">Atribuir a:</label>

                        <select name="newAssigneeId"
                                id="newAssigneeId"
                                class="form-select"
                                asp-items="@ViewBag.Assignees">
                            <option value="">-- Nenhum Atendente --</option>
                        </select>
                    </div>
                    <p class="text-muted small">Você pode atribuir este chamado a qualquer outro Atendente ou Administrador.</p>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Atribuir</button>
                </div>
            </form>
        </div>
    </div>
</div>