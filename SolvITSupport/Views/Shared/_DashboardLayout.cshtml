<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SolvITSupport</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />
</head>
<body>
    <div class="d-flex">
        <aside class="sidebar">
            <div class="sidebar-header">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="logo-container text-decoration-none">
                    <span class="logo-main-text">SolvIT</span>
                    <span class="logo-tag">Support</span>
                </a>
            </div>

            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home me-2"></i> Dashboard
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Tickets" asp-action="Index">
                        <i class="fas fa-ticket-alt me-2"></i> Meus Chamados
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="KnowledgeBase" asp-action="Index">
                        <i class="fas fa-book me-2"></i> Base de Conhecimento
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Reports" asp-action="Index">
                        <i class="fas fa-chart-bar me-2"></i> Relatórios
                    </a>
                </li>
                @if (User.IsInRole("Administrador"))
                {
                    <li class="sidebar-item">
                        <a asp-controller="Admin" asp-action="Index">
                            <i class="fas fa-cogs me-2"></i> Administração
                        </a>
                    </li>
                }
                <li class="sidebar-item">
                    <a asp-controller="Manage" asp-action="Index">
                        <i class="fas fa-user-cog me-2"></i> Configurações
                    </a>
                </li>
            </ul>

            <div class="sidebar-footer p-3 mt-auto">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="btn btn-link text-danger text-decoration-none p-0">
                        <i class="fas fa-sign-out-alt me-2"></i> Sair
                    </button>
                </form>
            </div>
        </aside>

        <div class="main-panel">
            <header class="header-navbar">
                <div class="ms-auto">
                    <partial name="_LoginPartial" />
                </div>
            </header>
            <main role="main" class="main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>