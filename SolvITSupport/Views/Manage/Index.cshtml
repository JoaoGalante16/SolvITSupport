@model SolvITSupport.Models.IndexViewModel
@{
    ViewData["Title"] = "Gerir Conta";
    Layout = "_DashboardLayout";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Altere as configurações da sua conta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Utilizador</dt>
        <dd class="col-sm-10">@Model.Username</dd>
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.NomeCompleto</dd>
        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
    </dl>

    <a class="btn btn-primary" asp-action="ChangePassword">Alterar Senha</a>
</div>