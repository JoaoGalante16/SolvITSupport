@model SolvITSupport.Models.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_DashboardLayout";
}

<div class="page-header">
    <div class="page-header-title">
        <h1>Dashboard</h1>
        <p>Bem-vindo ao sistema de suporte da SolvIT</p>
    </div>
    <div>
        <a asp-controller="Tickets" asp-action="Create" class="btn btn-primary d-flex align-items-center">
            <i class="fas fa-plus-circle me-2"></i> Abrir Novo Chamado
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="stats-card-title">TOTAL DE CHAMADOS</div>
            <div class="stats-card-value">@Model.TotalTickets</div>
            <div class="stats-card-description">Todos os chamados registados</div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="stats-card-title">EM ABERTO</div>
            <div class="stats-card-value text-warning">@Model.OpenTickets</div>
            <div class="stats-card-description">Aguardando atendimento</div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="stats-card-title">EM ANDAMENTO</div>
            <div class="stats-card-value text-info">@Model.InProgressTickets</div>
            <div class="stats-card-description">Sendo processados pela equipa</div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6 mb-4">
        <div class="stats-card">
            <div class="stats-card-title">RESOLVIDOS</div>
            <div class="stats-card-value text-success">@Model.ResolvedTickets</div>
            <div class="stats-card-description">Solucionados com sucesso</div>
        </div>
    </div>
</div>
<div class="card shadow mt-4">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link @(ViewBag.CurrentFilter == "Todos" ? "active" : "")" asp-action="Index" asp-route-filter="Todos">Todos os Chamados</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.CurrentFilter == "Aberto" ? "active" : "")" asp-action="Index" asp-route-filter="Aberto">Em Aberto</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.CurrentFilter == "Em Andamento" ? "active" : "")" asp-action="Index" asp-route-filter="Em Andamento">Em Andamento</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewBag.CurrentFilter == "Resolvidos" ? "active" : "")" asp-action="Index" asp-route-filter="Resolvidos">Resolvidos</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <table class="table table-hover align-middle">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Título</th>
                    <th>Categoria</th>
                    <th>Prioridade</th>
                    <th>Status</th>
                    <th>Data</th>
                    <th class="actions-column">Ações</th>
                </tr>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RecentTickets)
                {
                    <tr>
                        <td>@item.Codigo</td>
                        <td>@item.Titulo</td>
                        <td>@item.Categoria?.Nome</td>
                        <td>
                            @{
                                var priorityClass = "badge-prioridade-baixa"; // Cor padrão
                                switch (item.Prioridade?.Nome)
                                {
                                    case "Alta":
                                        priorityClass = "badge-prioridade-alta";
                                        break;
                                    case "Média":
                                        priorityClass = "badge-prioridade-media";
                                        break;
                                }
                            }
                            <span class="badge-status @priorityClass">@item.Prioridade?.Nome</span>
                        </td>
                        <td>
                            @{
                                var statusClass = "";
                                switch (item.Status?.Nome)
                                {
                                    case "Aberto":
                                        statusClass = "badge-status-aberto";
                                        break;
                                    case "Em Andamento":
                                        statusClass = "badge-status-andamento";
                                        break;
                                    case "Fechado":
                                    case "Resolvido":
                                        statusClass = "badge-status-fechado";
                                        break;
                                }
                            }
                            <span class="badge-status @statusClass">@item.Status?.Nome</span>
                        </td>
                        <td>@item.DataCriacao.ToString("dd/MM/yyyy")</td>
                        <td class="actions-column">
                            <a asp-controller="Tickets" asp-action="Details" asp-route-id="@item.Id" class="btn-details">Ver detalhes</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>