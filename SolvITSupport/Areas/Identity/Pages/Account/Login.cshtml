@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div>
    <div class="auth-header">
        <div>
            <span class="auth-title-main">SolvIT</span>
            <span class="auth-title-tag">Support</span>
        </div>
        <p>Entre com as suas credenciais para aceder ao sistema</p>
    </div>

    <div class="auth-card">
        <div class="auth-body">
            <section>
                <form id="account" method="post">
                    <h2>Login</h2>
                    <p>Digite o seu e-mail e senha para aceder</p>

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">E-mail</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="seu.email@empresa.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-3">
                        <div class="d-flex justify-content-between">
                            <label asp-for="Input.Password" class="form-label">Senha</label>
                        </div>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="mt-4">
                        <button id="login-submit" type="submit" class="btn btn-primary auth-submit-btn">Entrar</button>
                    </div>
                </form>
            </section>
        </div>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}